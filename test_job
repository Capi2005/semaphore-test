---
- name: Ejecutar whoami en todos los hosts
  hosts: all
  become: true
  remote_user: capi

  tasks:
    - name: Ir al directorio correspondiente
      shell:
        cmd: "cd /etc/ && ls -alh passwd | egrep -v 'capi' | wc -l"
      register: result_ls_alh_wc_l

    - name: Mostrar resultado de ls -alh *-SO-passwd* | egrep -v "default" | wc -l
      debug:
        msg: "El n√∫mero de archivos es {{ result_ls_alh_wc_l.stdout }}"
